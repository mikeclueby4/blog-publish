---
import { getCollection, render } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

const isPreview = import.meta.env.ASTRO_PREVIEW === 'true';

export async function getStaticPaths() {
  const isPreview = import.meta.env.ASTRO_PREVIEW === 'true';
  const posts = await getCollection('blog', ({ data }) => {
    if (isPreview) return true;
    return data.draft === false;
  });
  return posts.map((post) => ({
    params: { slug: post.data.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);
const { title, seo_title, description, canonical, og_image, noindex, draft, date, updated, tags } = post.data;
---

<Layout
  title={seo_title ?? title}
  description={description}
  canonical={canonical}
  og_image={og_image}
  noindex={noindex || draft}
>
  {draft && (
    <div class="draft-banner">
      ⚠️ DRAFT — this post is not published
    </div>
  )}
  <article>
    <header>
      <a class="back" href="/">← All posts</a>
      <h1>{title}</h1>
      <div class="meta">
        {date && (
          <time datetime={date.toISOString()}>
            {date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
          </time>
        )}
        {updated && (
          <span class="updated">
            · Updated {updated.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
          </span>
        )}
      </div>
      <ul class="tags">
        {tags.map((tag) => (
          <li><a href={`/tags/${tag}/`}>{tag}</a></li>
        ))}
      </ul>
    </header>
    <div class="prose">
      <Content />
    </div>
  </article>
  <footer>
    <a href="/">← All posts</a>
  </footer>
</Layout>

<style>
  article {
    max-width: 780px;
    margin: 0 auto;
    padding: 2rem 1rem 3rem;
  }
  .draft-banner {
    background: #7c3aed;
    color: white;
    padding: 0.6rem 1rem;
    text-align: center;
    font-size: 0.9rem;
  }
  .back {
    display: inline-block;
    color: #64748b;
    text-decoration: none;
    font-size: 0.9rem;
    margin-bottom: 1.5rem;
  }
  .back:hover { color: #e2e8f0; }
  h1 { font-size: 2rem; margin: 0 0 0.5rem; line-height: 1.3; }
  .meta { color: #64748b; font-size: 0.9rem; margin-bottom: 0.75rem; }
  .tags { list-style: none; padding: 0; margin: 0 0 2rem; display: flex; flex-wrap: wrap; gap: 0.4rem; }
  .tags li a { font-size: 0.8rem; background: #1e293b; color: #94a3b8; padding: 0.2rem 0.5rem; border-radius: 4px; text-decoration: none; }
  .tags li a:hover { background: #334155; }
  .prose { line-height: 1.8; }
  .prose :global(h2) { font-size: 1.5rem; margin-top: 2.5rem; border-bottom: 1px solid #1e293b; padding-bottom: 0.4rem; }
  .prose :global(h3) { font-size: 1.2rem; margin-top: 2rem; }
  .prose :global(a) { color: #7dd3fc; }
  .prose :global(a:hover) { color: #bae6fd; }
  .prose :global(code) { background: #1e293b; padding: 0.15em 0.35em; border-radius: 3px; font-size: 0.875em; }
  .prose :global(pre) { background: #1e293b; padding: 1.25rem; border-radius: 6px; overflow-x: auto; margin: 1.5rem 0; }
  .prose :global(pre code) { background: none; padding: 0; font-size: 0.875em; }
  .prose :global(blockquote) { border-left: 3px solid #334155; margin-left: 0; padding-left: 1.25rem; color: #94a3b8; font-style: italic; }
  .prose :global(img) { max-width: 100%; border-radius: 6px; }
  .prose :global(table) { border-collapse: collapse; width: 100%; margin: 1.5rem 0; }
  .prose :global(th), .prose :global(td) { border: 1px solid #1e293b; padding: 0.5rem 0.75rem; text-align: left; }
  .prose :global(th) { background: #1e293b; }
  footer {
    max-width: 780px;
    margin: 0 auto;
    padding: 1.5rem 1rem 2rem;
    border-top: 1px solid #1e293b;
  }
  footer a { color: #94a3b8; text-decoration: none; }
  footer a:hover { color: #e2e8f0; }
</style>
